<div id="movie-details-cnt">
    <div id="image-cnt">
        <img src={{theMovie.image}} alt=""/>
    </div>
    <div id="details-cnt">
        <a href="/movies">Go back</a>
        <br>
        <br>
        <a href="/movies/{{theMovie._id}}/edit">Edit This Movie</a>
        <h1>{{theMovie.title}}</h1>
        <h2>Director: {{theMovie.director}}</h2>
        <h3>Stars</h3>
        {{#each theMovie.stars}}
            <li>
                {{this}}
            </li>
        {{/each}}
        <p>{{theMovie.description}}</p>
        <div id="showtime-cnt">
            {{#each theMovie.showtimes}}
                {{this}}|
            {{/each}}
        </div>
        <br><br><br>
        <form action="/movie/delete/{{theMovie._id}}" method="POST">
            <button>Delete This Movie</button>
        </form>
    </div>

</div>